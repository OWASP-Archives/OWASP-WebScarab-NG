<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>


	<bean id="conversationServiceTarget"
		class="org.owasp.webscarab.services.ConversationService" lazy-init="true">
		<property name="conversationDao">
			<ref bean="conversationDao" />
		</property>
		<property name="eventService">
			<ref bean="eventService" />
		</property>
	</bean>

	<bean id="conversationService"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean"
		lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<ref local="conversationServiceTarget" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="addConversation">
					PROPAGATION_REQUIRED, ISOLATION_READ_UNCOMMITTED
				</prop>
				<prop key="get*">
					PROPAGATION_REQUIRED, ISOLATION_READ_UNCOMMITTED
				</prop>
			</props>
		</property>
	</bean>

	<bean id="listener"
		class="org.owasp.webscarab.plugins.proxy.Listener" lazy-init="true">
		<constructor-arg index="0">
			<bean class="java.net.InetSocketAddress">
				<constructor-arg index="0"><value>localhost</value></constructor-arg>
				<constructor-arg index="1"><value>8008</value></constructor-arg>
			</bean>
		</constructor-arg>
		<property name="conversationService">
			<ref local="conversationService" />
		</property>
		<property name="keyStoreFile"><value>certificates/server.p12</value></property>
		<property name="keyStorePassword"><value>password</value></property>
		<property name="keyPassword"><value>password</value></property>
	</bean>

	<bean id="proxy" class="org.owasp.webscarab.plugins.proxy.Proxy" lazy-init="true">
		<property name="listener">
			<ref local="listener" />
		</property>
	</bean>

</beans>
